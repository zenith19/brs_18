<h1><%= t "all_books" %></h1>

<%= search_form_for @search do |f| %>
  <%= render "search_fields", f: f %>
  <%= f.submit t("search"), class: "btn btn-primary" %>
<% end %>

<table class="table">
  <thead>
    <th></th>
    <th><%= t "title" %></th>
    <th><%= t "author" %></th>
    <th><%= t "category" %></th>
    <th><%= t "publish_date" %></th>
    <th><%= t "page" %></th>
  </thead>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= image_tag book.book_photos.first.image.url(:thumb) if
          book.book_photos.exists? %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.category.name %></td>
        <td><%= l book.publish_date, format: :short %></td>
        <td><%= book.page %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
<%= page_entries_info @books %>
