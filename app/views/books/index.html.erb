<h1><%= t "all_books" %></h1>
<table>
  <tr>
    <%= form_tag books_path, method: :get do %>
      <td><%= text_field_tag :query, params[:query] %></td>
      <td><%= submit_tag "Search" %></td>
    <% end %>
  </tr>
</table>
<table class="table">
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td>
          <div class="row">
            <div class="col-md-2">
              <%= link_to image_tag(book.book_photos.first.image.url(:book_medium)), book %>
            </div>
            <div class="col-md-10">
              <div class="panel-body paddin-fix">
                <span id="book_title">
                  <font size="5"><span class="post_title"><%= link_to book.title, book %></span></font>
                </span>
                <span class="pull-right" >
                  <div id="book-star-rating">
                    <%= render "shared/star_rating", book: book %>
                  </div>
                </span>
                <br>
                <%= book.author %>
                <hr>
                <p><%= book.description.truncate 500 %></p>
                <hr>
                <table>
                  <tr>
                    <td><%= t "publish_date" %>: <%= book.publish_date %></td>
                    <td>&nbsp;&nbsp;</td>
                    <td><%= t "page" %>: <%= book.page %></td>
                  </tr>
                </table>
              </div>
              <br><br>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>
<%= page_entries_info @books %>
