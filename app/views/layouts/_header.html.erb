<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("logo.png", alt: "", class:"logo-img"), root_path %>
    <%= link_to t(:system_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                role="button" aria-haspopup="true" aria-expanded="false">
                  <%= t "category" %>
                  <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_admin_category_path %></li>
                <li><%= link_to t(:view_all), admin_categories_path %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                role="button" aria-haspopup="true" aria-expanded="false">
                  <%= t "book" %>
                  <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_admin_book_path %></li>
                <li><%= link_to t(:view_all), "#" %></li>
              </ul>
            </li>
            <li><%= link_to t(:book_requests), "#" %></li>
            <li><%= link_to t(:users), "#" %></li>
          <% else %>
            <li><%= link_to t(:books), "#" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                role="button" aria-haspopup="true" aria-expanded="false">
                  <%= t "book_request" %>
                  <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(:add_new), new_request_path %></li>
                <li><%= link_to t(:view_all), requests_path %></li>
              </ul>
            </li>
            <li><%= link_to t(:users), "#" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
              role="button" aria-haspopup="true" aria-expanded="false">
                <%= t "account" %>
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:profile), "#" %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to t(:log_out), destroy_user_session_path %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:log_in), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
